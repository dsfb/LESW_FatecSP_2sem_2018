<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lesw.tree_knowledge.ChangeLevelFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginTop="120dp"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_select_level_tree_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_level_tree" />

            <Spinner
                android:id="@+id/spinner_select_level_tree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/txt_view_select_parent_knowledge_tree_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_parent_knowledge_tree" />

            <Spinner
                android:id="@+id/spinner_select_parent_knowledge_tree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:spinnerMode="dropdown" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_new_knowledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@color/white"
                android:textColor="@color/black"
                android:hint="@string/new_knowledge_insertion"
                />

            <!-- Action Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_add_knowledge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/accent"
                android:padding="12dp"
                android:text="@string/add_knowledge_tree" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>