<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lesw.tree_knowledge.ChangeLevelFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginTop="120dp"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_change_lvl_employee_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_employee_level_description" />

            <Spinner
                android:id="@+id/spinner_change_level_employee"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/txt_view_change_lvl_employee_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_employee_level_description2" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rdo_level_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/user_level" />

                <RadioButton
                    android:id="@+id/rdo_level_hr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/rh_level" />

                <RadioButton
                    android:id="@+id/rdo_level_manager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/manager_level" />
            </RadioGroup>

            <!-- Signup Button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_hr_change_level"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/accent"
                android:padding="12dp"
                android:text="@string/change_employee_level" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>